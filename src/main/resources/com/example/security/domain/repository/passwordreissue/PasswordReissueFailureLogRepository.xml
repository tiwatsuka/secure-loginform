<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.security.domain.repository.passwordreissue.PasswordReissueFailureLogRepository">

    <resultMap id="passwordReissueFailureLogResultMap" type="PasswordReissueFailureLog">
        <id property="username" column="username" />
        <id property="token" column="token" />
        <id property="attemptDate" column="attempt_date" typeHandler="DateTimeTypeHandler"/>
    </resultMap>
    
    <select id="findByUsernameAndToken" resultMap="passwordReissueFailureLogResultMap">
    <![CDATA[
        SELECT
            username,
            token,
            attempt_date
        FROM
            password_reissue_failure_log
        WHERE
            username = #{username} AND
            token = #{token}
        ORDER BY attempt_date DESC
    ]]>
    </select>
    
    <insert id="insert" parameterType="PasswordReissueFailureLog">
    <![CDATA[
        INSERT INTO password_reissue_failure_log (
            username,
            token,
            attempt_date
        ) VALUES (
	        #{username},
	        #{token},
            #{attemptDate, typeHandler=DateTimeTypeHandler},
        )
    ]]>
    </insert>
        
    <delete id="deleteByUsernameAndToken">
    	DELETE FROM
    		password_reissue_failure_log
    	WHERE
    		username = #{username} AND
    		token = #{token}
    </delete>
</mapper>
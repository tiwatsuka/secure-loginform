<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.security.domain.repository.passwordreissue.PasswordReissueFailureLogRepository">

    <resultMap id="passwordReissueFailureLogResultMap" type="PasswordReissueFailureLog">
        <id property="token" column="token" />
        <id property="attemptDate" column="attempt_date" typeHandler="DateTimeTypeHandler"/>
    </resultMap>
    
    <select id="findByToken" resultMap="passwordReissueFailureLogResultMap">
    <![CDATA[
        SELECT
            token,
            attempt_date
        FROM
            password_reissue_failure_log
        WHERE
            token = #{token}
        ORDER BY attempt_date DESC
    ]]>
    </select>
    
    <insert id="insert" parameterType="PasswordReissueFailureLog">
    <![CDATA[
        INSERT INTO password_reissue_failure_log (
            token,
            attempt_date
        ) VALUES (
	        #{token},
            #{attemptDate, typeHandler=DateTimeTypeHandler},
        )
    ]]>
    </insert>
        
    <delete id="deleteByToken">
    <![CDATA[
    	DELETE FROM
    		password_reissue_failure_log
    	WHERE
    		token = #{token}
    ]]>
    </delete>
    
    <delete id="deleteExpired">
    <![CDATA[
    	DELETE FROM
    		password_reissue_failure_log
    	WHERE
    		token = 
    		(SELECT
    			token
    		 FROM
    		 	password_reissue_info
    		 WHERE
    		 	token = password_reissue_failure_log.token 
    		 AND
    			expiry_date < #{date, typeHandler=DateTimeTypeHandler}
    		)
    ]]>
    </delete>
</mapper>
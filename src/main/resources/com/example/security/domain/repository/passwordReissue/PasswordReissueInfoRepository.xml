<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.security.domain.repository.passwordReissue.PasswordReissueInfoRepository">

    <resultMap id="PasswordReissueInfoResultMap" type="PasswordReissueInfo">
        <id property="username" column="username" />
        <id property="token" column="token" />
        <id property="secret" column="secret" />
        <id property="expiryDate" column="expiry_date" typeHandler="DateTimeTypeHandler"/>
    </resultMap>
    
    <select id="findOne" resultMap="PasswordReissueInfoResultMap">
    <![CDATA[
        SELECT
            username,
            token,
            secret,
            expiry_date
        FROM
            password_reissue_info
        WHERE
            username = #{username} AND
            token = #{token}
    ]]>
    </select>
    
    <insert id="insert" parameterType="PasswordReissueInfo">
    <![CDATA[
        INSERT INTO password_reissue_info (
            username,
            token,
            secret,
            expiry_date
        ) VALUES (
	        #{username},
	        #{token},
	        #{secret},
            #{expiryDate, typeHandler=DateTimeTypeHandler}
        )
    ]]>
    </insert>
    
    <delete id="delete">
    	DELETE FROM
    		password_reissue_info
    	WHERE
    		username = #{username} AND
    		token = #{token}
    </delete>
</mapper>
